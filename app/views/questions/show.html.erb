<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %> <br>
  <strong>Description:</strong>
  <%= @question.description %>

</p>
<h1> Answers </h1>
<ul>
  <% @answers = Answer.where(question: params[:id]) %>
  <% @answers.each do |answer| %>
  <li><%= answer.response %></li>
  <% end %>
</ul>


<%=  render '/answers/form' %>





